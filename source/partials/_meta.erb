<meta charset="utf-8">
<meta http-equiv="x-ua-compatible" content="ie=edge">
<meta name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>
  <% if current_page.data.title %>
    <%= "#{current_page.data.title} &mdash; #{data.site.title}" %>
  <% elsif content_for?(:title) %>
    <%= yield_content :title %> &mdash; <%= data.site.title %>
  <% else %>
    <%= data.site.title %>
  <% end %>
</title>
<link rel="icon" href="/favicon.ico" type="image/x-icon" />

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@devinhalladay">
<meta name="twitter:creator" content="@devinhalladay">
<meta name="twitter:title" content="<% if current_page.data.title %><%= current_page.data.title %> &mdash; <%= data.site.title %><% else %><%= data.site.title %><% end %>">
<meta name="twitter:description" content="<% if current_page.data.abstract %><%= current_page.data.abstract %><% else %><%= data.site.description %><% end %>">
<meta property="twitter:image" content="<% if current_page.data.social_image %><%= 'https://infinitecaesura.com' + current_page.data.social_image %><% else %>https://infinitecaesura.com/assets/images/seo-image.png <% end %>">

<meta property="og:type" content="website">
<meta property="og:locale" content="en_us">
<meta property="og:url" content="<%= data.site.url %><%= current_page.url %>">
<meta property="og:title" content="<% if current_page.data.title %><%= current_page.data.title %> &mdash; <%= data.site.title %><% else %><%= data.site.title %><% end %>">
<meta property="og:description" content="<% if current_page.data.abstract %><%= current_page.data.abstract %><% else %><%= data.site.description %><% end %>">
<meta property="og:site_name" content="<%= data.site.title %>">
<meta property="og:image" content="<% if current_page.data.social_image %><%= 'https://infinitecaesura.com' + current_page.data.social_image %><% else %>https://infinitecaesura.com/assets/images/seo-image.png<% end %>">

<%= stylesheet_link_tag "site" %>
<link rel="stylesheet" href="https://use.typekit.net/lbu2tns.css">
<%= javascript_include_tag "site", :async => true %>
